<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Only_Maximum_Can_be_selected</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(File_Type__c, &#39;Creative service&#39;),  NOT(ISPICKVAL(Invoice_Details__c, &#39;Maximum (campaign level)&#39;)))</errorConditionFormula>
    <errorDisplayField>Invoice_Details__c</errorDisplayField>
    <errorMessage>Only Maximum (campaign level) can be selected for Creative service</errorMessage>
</ValidationRule>
